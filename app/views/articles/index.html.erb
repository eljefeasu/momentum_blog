<div class="ui containter">
  <h1>Listing articles</h1>

  <%= link_to 'New article', new_article_path, class: 'ui primary button' %>

  <table class="ui celled table">
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="4">Text</th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.text %></td>
          <td class="center aligned"><%= link_to 'Show', article_path(article), class: 'ui button' %></td>
          <td class="center aligned"><%= link_to 'Edit', edit_article_path(article), class: 'ui button' %></td>
          <td class="center aligned">
            <%=
              link_to 'Destroy',
                article_path(article),
                method: :delete,
                class: 'ui negative button',
                data: { confirm: 'Are you sure?' }
            %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
